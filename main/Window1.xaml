<Window x:Class="Prueba.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prueba"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="368" Margin="0,66,0,0" VerticalAlignment="Top" Width="800">
            <Rectangle HorizontalAlignment="Center" Height="363" Stroke="Black" VerticalAlignment="Center" Width="800" Fill="Black"/>
            <Rectangle x:Name="Log_in" HorizontalAlignment="Left" Height="264" Margin="165,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="446" Fill="White"/>
            <TextBlock HorizontalAlignment="Left" Height="38" Margin="298,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontSize="24" FontWeight="Bold" FontFamily="Cascadia Mono SemiBold"><Run Language="es-es" Text="    "/><Run Text="Login"/></TextBlock>
            <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="30" Margin="245,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="293"/>
            <Button Content="INICIAR" HorizontalAlignment="Left" Height="30" Margin="315,263,0,0" VerticalAlignment="Top" Width="146" Click="Button_Click"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="30" Margin="245,205,0,0" VerticalAlignment="Top" Width="293"/>
            <TextBlock HorizontalAlignment="Left" Height="15" Margin="245,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"><Run Language="es-es" Text="USUARIO"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="21" Margin="245,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"><Run Language="es-es" Text="CONTRASEÑA"/></TextBlock>
        </Grid>
        <Grid x:Name="header1" HorizontalAlignment="Center" Height="66" VerticalAlignment="Top" Width="800" Background="White">
            <Rectangle HorizontalAlignment="Left" Height="46"  VerticalAlignment="Center" Width="120">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Logo-Tesla-removebg-preview.png" Stretch="Uniform"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="66" Margin="662,0,0,0"  VerticalAlignment="Center" Width="138" MouseDown="Rectangle_MouseDown_1">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/coche.png" Stretch="Uniform"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>

    </Grid>
</Window>
